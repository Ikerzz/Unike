{% block content %}

    <div class="container-fluid w-25 p-5">
        <div class="text-center"><h3>Crea tu cuenta!</h3></div>
        <div class="d-flex flex-column">
            <div class="login-form-1 mt-3 registerContainer">
                <form action="/registerUser" id="loginForm" method="post">
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="lg_email" class="sr-only">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Introduce tu mail" required>
                            </div>
                            <div class="form-group">
                                <label for="lg_username" class="sr-only">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Introduce un nombre de usuario!" required>
                            </div>
                            <div class="form-group">
                                <label for="lg_password" class="sr-only">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Introduce una contraseÃ±a!" required>
                            </div>
                            {% if data %}
                                <div class="form-text">
                                    <label for="error" class="sr-only">Error</label>
                                    <p class="">{{ data.error }}</p>
                                </div>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-light mb-5">Registrar <i class="fa fa-chevron-right"></i></button>
                    </div>
                    <div class="etc-login-form">
                        <p>Ya tienes un usuario?<a href="/login"> Logueate!</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

