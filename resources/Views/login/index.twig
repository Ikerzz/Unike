{% extends "/templates/layout.twig" %}

{% block css %}

    <style>
        .footerContainer {
            display: none;
        }
        .errorMessage {
            width: 200px;
            color: white;
            background: red;
            text-align: center;
            padding: 5px;
            border-radius: 5px;
            font-weight: bold;
        }
    </style>

{% endblock %}

{% block content %}

<div class="container-fluid w-25 p-5">
    <div class="text-center"><h3>Inicia sesión con tu usuario!</h3></div>
        <div class="d-flex flex-column">
            <div class="login-form-1 mt-3 loginContainer">
                <form action="/panel" id="loginForm" method="post">
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="lg_username" class="sr-only">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Usuario">
                            </div>
                            <div class="form-group">
                                <label for="lg_password" class="sr-only">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Contraseña">
                            </div>
                            {% if data.status == 'KO' %}
                                <div class="form-text d-flex justify-content-center">
                                    <label for="error" class="sr-only">Error</label>
                                    <p class="errorMessage">{{ data.message }}</p>
                                </div>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-light mb-5">Entrar <i class="fa fa-chevron-right"></i></button>
                    </div>
                    <div class="etc-login-form">
                        <p>Nuevo usuario?<a href="/register"> Create una cuenta</a></p>
                    </div>
                </form>
            </div>
        </div>
</div>
{% endblock %}

