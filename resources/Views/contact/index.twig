{% extends "/templates/layout.twig" %}
{% block css %}
    <style>

        .grupoContacto {
            gap: 10px!important;
        }

        .form {
            width: 500px!important;
        }

        .contenedor {
            height: 80vh;
        }

        .iconHref {
            color: #949494;
            text-decoration: none;
        }
        .iconHref:visited {
            color: #949494;
            text-decoration: none;
        }

        @media screen and (max-width: 900px) {
            .form {
                width: 300px!important;
                font-size: 15px!important;
            }
            h1 {
                font-size: 30px!important;
            }
        }

    </style>
{% endblock %}
{% block content %}
    <div class="container-fluid d-flex justify-content-center p-0 m-0 contenedor">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <h1 class="mb-5">Contacta con nosotros!</h1>
            <form class="form d-flex flex-column justify-content-center align-items-center" action="/contact" method="post">
                <div class="form-group w-100">
                    <label for="email">E-Mail de contacto</label>
                    <input type="email" class="form-control" name="email" id="email"
                           placeholder="Introduce tu e-mail" maxlength="100" required>
                </div>
                <div class="d-flex flex-column flex-md-row grupoContacto w-100">
                    <div class="form-group w-100">
                        <label for="name">Nombre</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" maxlength="100" required>
                    </div>
                    <div class="form-group w-100">
                        <label for="lastname">Apellidos</label>
                        <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Apellidos" maxlength="150" required>
                    </div>
                </div>
                <div class="form-group w-100">
                    <label for="areaContact">Escribe aquí tu petición!</label>
                    <textarea class="form-control" id="areaContact" name="description" rows="3" maxlength="200" required></textarea>
                </div>
                <small id="dataSharing" class="form-text text-muted mb-4">No compartiremos ninguno de tus datos con nadie.</small>
                <button type="submit" class="btn btn-dark mb-4 w-25">Enviar</button>
            </form>
        </div>
    </div>

    {% if data.status == 'KO' %}
        <div class="modal fade bd-example-modal-sm show" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-modal="true" style="display: block">
            <div class="modal-dialog modal-sm">
                <div class="modal-content p-0">
                    <div class="p-3 d-flex justify-content-center align-items-center flex-column modalTextContainer">
                        <span class="text-danger font-weight-bold text-white text-center">{{ data.message }}</span>
                    </div>
                    <a href="/contact" class="iconHref text-center pt-2">
                        <i class="fa-solid fa-xmark"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="modal-backdrop fade show"></div>

    {% endif %}

    {% if data.status == 'OK' %}
        <div class="modal fade bd-example-modal-sm show" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-modal="true" style="display: block">
            <div class="modal-dialog modal-sm">
                <div class="modal-content p-0">
                    <div class="p-3 d-flex justify-content-center align-items-center flex-column modalTextContainer">
                        <span class="text-success font-weight-bold text-white text-center">{{ data.message }}</span>
                    </div>
                    <a href="/contact" class="iconHref text-center pt-2">
                        <i class="fa-solid fa-xmark"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="modal-backdrop fade show"></div>

    {% endif %}
{% endblock %}